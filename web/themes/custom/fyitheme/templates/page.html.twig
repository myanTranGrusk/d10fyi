<header class="container py-3">
  <div class="row align-items-center">
    <div class="col-md-6">
      {{ page.header_left }}
    </div>
    <div class="col-md-6 text-end">
      {{ page.header_right }}
    </div>
  </div>
</header>

{% if page.title %}
<section class="hero text-white text-center py-5" style="background: #0056b3">
  <div class="container">
    {{ page.title }}
  </div>
</section>
{% endif %}

<main class="mGrusk-page-html-twig container my-5">
  <div class="row">
    {% if page.sidebar_left %}
    <aside class="col-md-3">
      {{ page.sidebar_left }}
    </aside>
    <section class="page-content col-md-9">
    {% else %}
    <section class="page-content">
    {% endif %}
      {{ page.content }}
    </section>
  </div>
</main>

<footer class="container border-top py-4">
  <div class="row">
    <div class="col-md-6">
      {{ page.footer_left }}
    </div>
    <div class="col-md-6 text-end">
      {{ page.footer_right }}
    </div>
  </div>
</footer>
