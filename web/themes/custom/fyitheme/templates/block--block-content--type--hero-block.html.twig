<section
  class="mGrusk hero-banner position-relative text-white text-center"
  style="background-image: url('{{ content.field_background_image }}');"
>
  {% if content.field_color_overlay %}
  <div
    class="mGrusk hero-overlay"
    style="background-color: {{ content.field_color_overlay }};"
  ></div>
  {% endif %}

  <div class="mGrusk hero-content position-relative container py-5">
    {% if content.field_hero_headline %}
    <h1 class="display-4">{{ content.field_hero_headline }}</h1>
    {% endif %} {% if content.field_hero_tagline %}
    <p class="lead">{{ content.field_hero_tagline }}</p>
    {% endif %}

    <div class="d-flex justify-content-center gap-3 flex-wrap mt-4">
      {% if content.field_hero_link_1 %}
      <div class="hero-link">{{ content.field_hero_link_1 }}</div>
      {% endif %} {% if content.field_hero_link_2 %}
      <div class="hero-link">{{ content.field_hero_link_2 }}</div>
      {% endif %} {% if content.field_hero_link_3 %}
      <div class="hero-link">{{ content.field_hero_link_3 }}</div>
      {% endif %}
    </div>
  </div>
</section>
